SELECT * FROM PERSON


CREATE TABLE ORDERS (
    order_id VARCHAR(10) PRIMARY KEY,
    order_name VARCHAR(10),
    city VARCHAR(20),
    Pid VARCHAR(10),
    FOREIGN KEY (Pid) REFERENCES PERSON(Pid)
);

select * from ORDERS

ALTER TABLE ORDERS MODIFY order_name VARCHAR2(25);

ALTER TABLE ORDERS MODIFY city VARCHAR2(25);

